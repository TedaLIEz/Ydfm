            android:title="@string/pref_check_version"
            android:key="@string/pref_check_version"></Preference>
        <Preference
            android:title="@string/pref_about_us"
            android:key="@string/pref_about_us"></Preference>

    </com.hustascii.ydfm.view.MyPreferenceCategory>


