<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <com.hustascii.ydfm.view.MyPreferenceCategory android:title="基本设置">
        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications_new_message"
            android:shadowColor="@color/abc_input_method_navigation_guard"
            android:title="@string/pref_notice_wifi" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications_new_message"
            android:title="@string/pref_auto_wifi" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications_new_message"
            android:title="@string/pref_allow_message" />

        <Preference
            android:title="@string/pref_clear_mem"
